{
  "name": "puretext-copy-extension",
  "version": "1.0.0",
  "description": "Browser extension for copying plain text from AI chat responses",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "icons": "node create-icons.js",
    "build": "npm run icons && node build.js",
    "package": "npm run build && node package.js",
    "clean": "rm -rf dist *.zip"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.25.8",
    "jsdom": "^23.0.0",
    "sharp": "^0.34.3",
    "vitest": "^1.0.0"
  },
  "type": "module"
}
