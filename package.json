{
  "name": "pastemate",
  "version": "1.0.0",
  "description": "Browser extension for copying plain text from AI chat responses",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "icons": "node create-icons.js",
    "build": "npm run icons && node build.js",
    "build:debug": "PURETEXT_DEBUG=true npm run build",
    "package": "npm run build && node package.js",
    "package:debug": "npm run build:debug && node package.js",
    "clean": "rm -rf dist *.zip"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.25.8",
    "fluent-ffmpeg": "^2.1.3",
    "gifify": "^2.4.5",
    "jsdom": "^23.0.0",
    "sharp": "^0.34.3",
    "unzipper": "^0.12.3",
    "vitest": "^1.0.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "type": "module",
  "dependencies": {
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "html2pdf.js": "^0.10.3"
  }
}
